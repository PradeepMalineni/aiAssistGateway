# Enterprise Dockerfile for Agentic Space Deployment
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create artifacts directory
RUN mkdir -p /tmp/gateway-artifacts

# Set environment variables for enterprise deployment
ENV ENTERPRISE_MODE=true
ENV AUTHENTICATION_REQUIRED=true
ENV LOG_LEVEL=INFO
ENV HOST=0.0.0.0
ENV PORT=8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Expose port
EXPOSE 8080

# Run the enterprise server
CMD ["python", "server/agentic_server.py"]
